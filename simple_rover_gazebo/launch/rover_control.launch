<launch>

  <param name="robot_description"
    command="$(find xacro)/xacro --inorder '$(find robots)/urdf/.xacro'" />

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find robots)/config/rover_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/rover" args="joint_state_controller
					  joint1_position_controller
            wheel_right_front_position_controller
            wheel_right_back_position_controller
            wheel_left_front_position_controller
            wheel_left_back_position_controller" />

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">
    <remap from="/joint_states" to="/rover/joint_states" />
  </node>

</launch>

